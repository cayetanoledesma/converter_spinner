<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="173dp"
        tools:layout_editor_absoluteY="256dp">

        <Button
            android:id="@+id/length"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:gravity="center"
            android:onClick="length_convert"
            android:text="LONGITUD"
            android:textAlignment="center"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            tools:ignore="HardcodedText,InvalidId" />

        <Button
            android:id="@+id/currency"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:gravity="center"
            android:onClick="currency_convert"
            android:text="DIVISA"
            android:textAlignment="center"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            tools:ignore="HardcodedText,InvalidId" />

        <Button
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:gravity="center"
            android:onClick="temperature_convert"
            android:text="TEMPERATURA"
            android:textAlignment="center"
            android:textStyle="bold"
            app:cornerRadius="100dp"
            tools:ignore="InvalidId" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:backgroundTint="#FBF6F8"
            android:clickable="true"
            android:textAlignment="center"
            android:textSize="32sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/textinput"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:autofillHints="1"
            android:backgroundTint="#F4F3F3"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:maxLength="9"
            android:textAlignment="center"
            android:textColor="#FAF8F7"
            android:textSize="30sp"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:backgroundTint="#FDF7F9"
            android:textAlignment="center"
            android:textSize="32sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textoutput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="#F2F7F8"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="#0E0D0D"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:backgroundTint="#021D33"
            android:contentDescription="@string/convertir"
            android:text="convertir"
            app:cornerRadius="100dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:backgroundTint="#F31414"
            android:text="COMPARTIR"
            android:textSize="12dp"
            app:cornerRadius="100dp"
            tools:ignore="TextContrastCheck" />


    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>